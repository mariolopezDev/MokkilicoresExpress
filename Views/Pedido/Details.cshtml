@model MokkilicoresExpress.Models.ViewModels.PedidoDetailsViewModel

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<h1>Detalles del Pedido</h1>

<div class="form-group">
    <label>ID del Cliente:</label>
    <input type="text" value="@Model.Pedido.ClienteId" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Nombre del Cliente:</label>
    <input type="text" value="@Model.Cliente.Nombre @Model.Cliente.Apellido" class="form-control" readonly />
</div>
<div class="form-group">
    <label>ID del Producto:</label>
    <input type="text" value="@Model.Pedido.InventarioId" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Tipo de Licor:</label>
    <input type="text" value="@Model.Inventario.TipoLicor" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Cantidad:</label>
    <input type="text" value="@Model.Pedido.Cantidad" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Costo Sin IVA:</label>
    <input type="text" value="@Model.Pedido.CostoSinIVA.ToString("C")" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Costo Total:</label>
    <input type="text" value="@Model.Pedido.CostoTotal.ToString("C")" class="form-control" readonly />
</div>
<div class="form-group">
    <label>Estado:</label>
    <input type="text" value="@Model.Pedido.Estado" class="form-control" readonly />
</div>

<a href="@Url.Action("Index", "Pedido")" class="btn btn-primary">Volver a la lista</a>

